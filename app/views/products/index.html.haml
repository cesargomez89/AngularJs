%h1 Listing products
%table(ng-controller="productsController" ng-init="showProducts()")
  %thead
    %tr
      %th Name
      %th Price
      %th Description
      %th Stock
      %th
      %th
      %th
  %tbody(ng-repeat="product in products")
    %tr
      %td {{product.name}}
      %td {{product.price}}
      %td {{product.description}}
      %td {{product.stock}}
      %td
        %a{href: "products/{{product.id}}"} show
      %td= link_to 'Edit', edit_product_path(product)
      %td(ng-click="destroy(product.id)") destroy
%br/
= link_to 'New Product', new_product_path
