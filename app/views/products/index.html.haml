%h1 Listing products
%table(ng-controller="productsController" ng-init="showProducts()")
  %thead
    %tr
      %th Name
      %th Price
      %th Description
      %th Stock
      %th
      %th
      %th
  %tbody(ng-repeat="product in products")
    %tr
      %td {{product.name}}
      %td {{product.price}}
      %td {{product.description}}
      %td {{product.stock}}
      %td= link_to 'Show', product
      %td= link_to 'Edit', edit_product_path(product)
      %td= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Product', new_product_path
